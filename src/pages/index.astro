---
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/portfolio/Section.astro';
import ProjectCard from '../components/portfolio/ProjectCard.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { projects } from '../data/projects';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Nav />

		<main class="landing">
			<!-- Hero Section -->
			<section class="hero">
				<h1 class="site-title">arthur3.com</h1>
				<p class="tagline">{SITE_DESCRIPTION}</p>
			</section>

			<!-- About Section -->
			<Section>
				<div class="section-header">
					<h2>About</h2>
					<p class="section-description">
						Creator, builder, and storyteller. I specialize in crafting elegant solutions
						to complex problems through thoughtful design and engineering.
					</p>
				</div>
			</Section>

			<!-- Projects Section -->
			<Section id="projects" background="alt">
				<div class="section-header">
					<h2>Featured Work</h2>
					<p class="section-description">
						Selected projects that showcase my approach to development and design.
					</p>
				</div>
				<div class="projects-grid">
					{projects.map((project) => (
						<ProjectCard {...project} />
					))}
				</div>
			</Section>

			<!-- Blog Section -->
			<Section>
				<div class="section-header centered">
					<h2>Latest Thoughts</h2>
					<p class="section-description">
						Insights, tutorials, and reflections on technology and creativity.
					</p>
					<a href="/blog" class="cta-button">Explore Articles</a>
				</div>
			</Section>

			<!-- Contact Section -->
			<Section id="contact" background="alt">
				<div class="section-header centered">
					<h2>Let's Connect</h2>
					<p class="section-description">
						Interested in collaborating? Let's start a conversation.
					</p>
					<div class="social-links">
						<a href="https://github.com" target="_blank" class="social-link">GitHub</a>
						<a href="https://twitter.com" target="_blank" class="social-link">Twitter</a>
						<a href="https://linkedin.com" target="_blank" class="social-link">LinkedIn</a>
						<a href="mailto:hello@arthur3.com" class="social-link">Email</a>
					</div>
				</div>
			</Section>
		</main>

		<Footer />
	</body>
</html>

<style>
	body {
		padding-top: 8rem;
	}

	.landing {
		min-height: 100vh;
	}

	/* Hero Section */
	.hero {
		text-align: center;
		padding: 10rem 2rem 8rem;
		background: transparent;
	}

	.site-title {
		font-size: clamp(3.5rem, 10vw, 7rem);
		margin: 0 0 1.5rem 0;
		font-weight: 700;
		color: rgb(var(--black));
		letter-spacing: -0.04em;
		line-height: 1;
	}

	.tagline {
		font-size: clamp(1.15rem, 2.5vw, 1.5rem);
		color: rgb(var(--gray));
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.6;
		font-weight: 400;
	}

	/* Section Styles */
	.section-header {
		margin-bottom: 3rem;
	}

	.section-header.centered {
		text-align: center;
	}

	.section-header h2 {
		font-size: clamp(2rem, 4vw, 2.75rem);
		margin-bottom: 1rem;
		color: rgb(var(--black));
		font-weight: 600;
		letter-spacing: -0.02em;
	}

	.section-description {
		font-size: 1.15rem;
		color: rgb(var(--gray-dark));
		max-width: 700px;
		line-height: 1.7;
		margin-bottom: 2rem;
	}

	.section-header.centered .section-description {
		margin-left: auto;
		margin-right: auto;
	}

	/* Projects Grid */
	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2rem;
	}

	/* CTA Button */
	.cta-button {
		display: inline-block;
		padding: 1rem 2.5rem;
		background: #e6d7b9;
		color: rgb(var(--black));
		text-decoration: none;
		border-radius: 16px;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
		border: 1px solid #d4c5a5;
	}

	.cta-button:hover {
		background: #d4c5a5;
		transform: translateY(-4px) scale(1.05);
		box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
	}

	.cta-button:active {
		transform: translateY(-2px) scale(1.02);
	}

	/* Social Links */
	.social-links {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-top: 2rem;
	}

	.social-link {
		padding: 0.875rem 1.75rem;
		background: #fdf5ea;
		color: rgb(var(--black));
		text-decoration: none;
		border-radius: 16px;
		font-weight: 500;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		border: 1px solid #e6d7b9;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	}

	.social-link:hover {
		transform: translateY(-4px) scale(1.05);
		border-color: #d4c5a5;
		background: #f2e2c4;
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
	}

	.social-link:active {
		transform: translateY(-2px) scale(1.02);
	}

	/* Responsive */
	@media (max-width: 768px) {
		body {
			padding-top: 7rem;
		}

		.hero {
			padding: 6rem 1.5rem 4rem;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}

		.social-links {
			flex-direction: column;
			align-items: stretch;
		}

		.social-link {
			text-align: center;
		}
	}
</style>
